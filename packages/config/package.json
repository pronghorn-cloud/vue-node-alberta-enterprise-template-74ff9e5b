    "test:watch": "vitest"
  },
  "dependencies": {
    "@template/shared": "*",
    "zod": "^3.24.1",
    "dotenv": "^16.4.7"
  },
  "devDependencies": {
    "typescript": "^5.7.3",
    "vitest": "^2.1.8"
  }
}
