{
  "name": "@template/config",
  "version": "1.0.0",
  "description": "Configuration validation and management for Alberta Government enterprise template",
  "private": true,
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
